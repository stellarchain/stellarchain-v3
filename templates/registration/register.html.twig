{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container-fluid container-xl px-3 px-lg-5 py-2">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="d-flex mb-2">
                <!-- Icon -->
                  <a href="/" class="mx-auto flex-shrink-0 bg-primary bg-opacity-10 rounded-3 d-flex" style="height: 60px; width: 60px;">
                      <i class="bi bi-person-badge fs-2 rounded align-self-center mx-auto text-primary"></i>
                  </a>
                </div>
                <div class="d-flex flex-column text-center mb-4">
                   <p class="text-center fs-4 fw-semibold w-100 mb-2">Register your Account</p>
                   <p class="small text-muted mb-2">Enter your details to access to all Stellar Community Fund goodies.</p>
                </div>

                {{ form_start(registrationForm) }}
                    <div class="form-floating mb-2 w-100">
                        <input
                            name="{{ field_name(registrationForm.username) }}"
                            value="{{ field_value(registrationForm.username) }}"
                            placeholder="{{ field_label(registrationForm.username) }}"
                            class="form-control"
                            type="text"
                        >
                        <label for="username" class="form-label required">Username</label>
                        <div class="form-error">
                            {{ form_errors(registrationForm.username) }}
                        </div>
                    </div>

                    <div class="form-floating mb-2 w-100">
                        <input
                            name="{{ field_name(registrationForm.first_name) }}"
                            value="{{ field_value(registrationForm.first_name) }}"
                            placeholder="{{ field_label(registrationForm.first_name) }}"
                            class="form-control"
                            type="text"
                        >
                        <label for="first_name" class="form-label required">First name</label>
                        <div class="form-error">
                            {{ form_errors(registrationForm.first_name) }}
                        </div>
                    </div>

                    <div class="form-floating mb-2 w-100">
                        <input
                            name="{{ field_name(registrationForm.last_name) }}"
                            value="{{ field_value(registrationForm.last_name) }}"
                            placeholder="{{ field_label(registrationForm.last_name) }}"
                            class="form-control"
                            type="text"
                        >
                        <label for="last_name" class="form-label required">Last name</label>
                        <div class="form-error">
                            {{ form_errors(registrationForm.last_name) }}
                        </div>
                    </div>

                    <div class="form-floating mb-2 w-100">
                        <input
                            name="{{ field_name(registrationForm.email) }}"
                            value="{{ field_value(registrationForm.email) }}"
                            placeholder="{{ field_label(registrationForm.email) }}"
                            class="form-control"
                            type="text"
                        >
                        <label for="email" class="form-label required">Email</label>
                        <div class="form-error">
                            {{ form_errors(registrationForm.email) }}
                        </div>
                    </div>

                    <div class="form-floating mb-2 w-100">
                        <input
                            name="{{ field_name(registrationForm.plainPassword) }}"
                            value="{{ field_value(registrationForm.plainPassword) }}"
                            placeholder="{{ field_label(registrationForm.plainPassword) }}"
                            class="form-control"
                            type="text"
                        >
                        <label for="password" class="form-label required">Password</label>
                        <div class="form-error">
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                    </div>

                    <div class="mt-2 mb-3 float-start">
                        <div class="form-check form-switch">
                            <input
                                name="{{ field_name(registrationForm.agreeTerms) }}"
                                class="form-check-input"
                                type="checkbox"
                            >
                            <label class="checkbox-switch form-checkbox-label" for="{{field_name(registrationForm.agreeTerms)}}">Agree terms</label>
                        </div>
                        <div class="form-error">
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                    </div>
                    <div class="mb-3"><button type="submit" id="submit" name="submit" class="btn-lg btn-primary w-100 btn">Register</button></div>
                {{ form_end(registrationForm) }}

                <div class="text-center mt-4">
                  <ul class="list-inline m-0">
                      <li class="list-inline-item small">
                        <a href="https://support.remote-tech.co.uk" target="_blank" class="text-decoration-none">Support</a>
                      </li>
                      <li class="list-inline-item small">
                        <a href="https://remote-tech.co.uk/privacy" target="_blank" class="text-decoration-none">Privacy</a>
                      </li>
                      <li class="list-inline-item small">
                        <a href="https://remote-tech.co.uk/terms" target="_blank" class="text-decoration-none">Terms</a>
                      </li>
                      <li class="list-inline-item small">
                        <a href="https://remote-tech.co.uk/security" target="_blank" class="text-decoration-none">Security</a>
                      </li>
                  </ul>
                </div>
                <div class="mt-1 text-center small">
                   <p class="small text-muted opacity-50">Copyright Â© 2024 Stellar Community Fund</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
