{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}

<div class="vh-100 overflow-y-scroll overflow-x-hidden hide-scrollbar">
    <div class="mt-4">
        <div class="d-flex align-items-center small py-2">
            <div class="flex-grow-1">
                <span class="ps-0 mb-2 fs-1 fw-bold">Events</span>
            </div>
        </div>
    </div>

    <div class="d-flex align-items-center border-0 py-2">
        <div class="flex-grow-1 d-flex flex-column lh-1">
            <span class="fw-bold mb-1">Featured Events</span>
            <div class="small">
                <span class="text-secondary small mb-0">Events recommened by us</span>
            </div>
        </div>
    </div>

    {{ component('events-component', { type: 'hot'}) }}

    <div class="py-4">
        <span>&nbsp;</span>
    </div>

    <div class="mt-0 d-block d-sm-none">
        <span>&nbsp;</span>
    </div>
</div>

{% endblock %}
