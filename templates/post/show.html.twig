{% extends 'base.html.twig' %}

{% block title %}{{post.title}}{% endblock %}

{% set content_title = post.title %}

{% block body %}
<div {{ stimulus_controller('post')|stimulus_controller('like') }}>
    <div class="d-flex align-items-center small py-2 justify-content-between">
        <div class="d-flex grid gap-2">
            <a class="bg-white border rounded d-flex flex-shrink-0" style="height: 36px; width: 36px;" href="/">
                <span class="rounded-circle align-self-center mx-auto fw-bold fs-6">
                    <i class="bi bi-arrow-left"></i>
                </span>
            </a>
            <a class="bg-white border rounded d-flex flex-shrink-0 text-decoration-none " style="height: 36px; width: 36px;">
                <span class="rounded-circle align-self-center mx-auto fw-bold fs-6 d-flex gap-1">
                    <i {{ stimulus_target('like', 'heartIcon' ) }} class="bi bi-heart{{ liked ? '-fill' : '' }} small"
                        role="button" aria-label="Like post" data-like-liked-param="{{ liked ? 'true' : 'false' }}" {{
                        stimulus_action('like', 'like' , 'click' , { id: post.id, type: 'post' }) }}>
                    </i>
                    <span class="small" {{ stimulus_target('like', 'totalLikes' ) }}> {{likes}} </span>
                </span>
            </a>
        </div>
        <div class="d-flex grid gap-2">
            <a role="button" class="bg-white border rounded d-flex flex-shrink-0" style="height: 36px; width: 36px;" data-bs-toggle="modal" data-bs-target="#shareModal">
                <span class="rounded-circle align-self-center mx-auto fw-bold fs-6">
                    <i class="bi bi-box-arrow-up"></i>
                </span>
            </a>
            <a class="bg-white border rounded d-flex flex-shrink-0" style="height: 36px; width: 36px;" href="#">
                <span class="rounded-circle align-self-center mx-auto fw-bold fs-6">
                    <i class="bi bi-three-dots"></i>
                </span>
            </a>
            <a type="button" class="bg-white border rounded d-flex flex-shrink-0" style="height: 36px; width: 36px;"
                data-bs-toggle="modal" data-bs-target="#commentModal" data-action="live#action"
                data-live-action-param="newComment">
                <span class="rounded-circle align-self-center mx-auto fw-bold"><i class="bi bi-chat"></i></span>
            </a>
        </div>
    </div>
    <div class="card mb-2">
        <div class="card-body rounded py-2">
            <div class="d-flex align-items-center">
                <div class="d-flex flex-column justify-content-center">
                    <p class="fw-bold mb-0">{{post.title}}</p>
                    <p class="small mb-0">{{post.body}}</p>
                    <div class="small text-secondary fw-bold">
                        <span class="small">{{post.rank}} points by <a class="text-decoration-none"
                                href="{{path('app_account_show', {id: post.user.id})}}">@{{post.user.username}}</a></span>
                        <span class="small">{{ post.createdAt | time_diff }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{ component('comments-component', {entity: post}) }}

<div class="modal modal-md fade" id="shareModal" tabindex="-1" aria-labelledby="shareModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="shareModalLabel">Share this post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="text-center">Share this post on your favorite social platforms:</p>
        <div class="d-flex justify-content-center gap-3">
          <a href="https://www.facebook.com/sharer/sharer.php?u={{ absolute_url('app_post_show', {id: post.id}) }}" class="btn btn-primary" target="_blank" rel="noopener noreferrer">
            <i class="bi bi-facebook"></i> Facebook
          </a>
          <a href="https://twitter.com/intent/tweet?url={{ absolute_url('app_post_show', {id: post.id}) }}&text={{ post.title }}" class="btn btn-info" target="_blank" rel="noopener noreferrer">
            <i class="bi bi-twitter"></i> Twitter
          </a>
          <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ absolute_url('app_post_show', {id: post.id}) }}&title={{ post.title }}" class="btn btn-secondary" target="_blank" rel="noopener noreferrer">
            <i class="bi bi-linkedin"></i> LinkedIn
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
