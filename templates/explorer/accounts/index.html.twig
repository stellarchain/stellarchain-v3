{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% set content_title = 'Stellar Explorer' %}

{% block body %}

{% include 'explorer/header.html.twig' %}

<div class="vh-100 overflow-y-scroll overflow-x-hidden hide-scrollbar">
    <div class="row my-2">
        <div class="col-md-12 col-lg-12">
            <div class="card mb-2 p-2">
                <span class="fs-4 text-secondary"><i class="bi bi-check-circle-fill text-success"></i>
                    Account
                </span>
                <span class="truncate-text fs-4">{{hash}}</span>
                <span class="small text-secondary fst-italic">
                    Created at 4 Dec
                    2024 18:20
                </span>
            </div>

            <ul class="list-group mb-3 bg-secondary">
                <li class="list-group-item d-flex flex-column flex-sm-row justify-content-between gap-2 lh-1 p-2">
                    <div>
                        <h6 class="my-0 text-body-secondary">Balance</h6>
                        <small class="text-secondary">Account address who paid the fee transaction</small>
                    </div>
                    <span class="text-body"> 10 XLM ($5)</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-sm p-2">
                    <div>
                        <h6 class="my-0 text-body-secondary">Fee charged</h6>
                        <small class="text-secondary">Total fee paid for transaction</small>
                    </div>
                    <span class="text-body"> 10 XLM ($5)</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-sm p-2">
                    <div>
                        <h6 class="my-0 text-body-secondary">Memo</h6>
                        <small class="text-secondary">Memo text type</small>
                    </div>
                    <div>
                        <span class="badge bg-secondary">StellarTokens.FUN</span>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between bg-body-tertiary p-2">
                    <div>
                        <div class="text-success">
                            <h6 class="my-0 text-body-secondary">Status</h6>
                            <small class="text-secondary">Transaction successful</small>
                        </div>
                    </div>
                    <div>
                        <span class="badge bg-success">Success</span>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between p-2">
                    <span>Total (USD)</span>
                    <strong>$20</strong>
                </li>
            </ul>
            <div class="card p-2">
                <div class="d-flex justify-content-between">
                    <span class="text-body-secondary">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button text-primary small" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#collapseDevelopers" aria-expanded="true"
                                    aria-controls="collapseDevelopers">
                                    Developers <i class="bi bi-chevron-right small"></i>
                                </button>
                            </h2>
                        </div>
                    </span>
                </div>
                <div id="collapseDevelopers" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        BODY
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
