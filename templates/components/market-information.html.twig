<div{{ attributes.defaults(stimulus_controller('market', {url: mercure('stellar-real-time-data')})) }}>
    <div class="card-header px-0 border-0 pb-0">
        <div class="d-flex align-items-center border-0 px-3 py-1">
            <div class="flex-grow-1 d-flex flex-column lh-1">
                <span class="fw-bold mb-1">Market Information</span>
                <div class="small">
                    <span class="text-muted small mb-0">Updated every 5m</span>
                </div>
            </div>
        </div>
    </div>

    <div class="list-group mb-2 list-group-flush">
        {% for key, stat in this.stats %}
            <div class="list-group-item list-group-item-action d-flex align-items-center py-1 border-0 hover rounded-0">
                <div class="flex-shrink-0 text-decoration-none">
                    <div class="bg-secondary bg-opacity-10 rounded d-flex flex-shrink-0 text-secondary"
                        style="height: 36px; width: 36px;">
                        {% if key == 'rank' %}
                        <i class="bi bi-hash align-self-center mx-auto fs-5 fw-bold"></i>
                        {% elseif key == 'price_usd' %}
                        <i class="bi bi-currency-dollar align-self-center mx-auto fs-5 fw-bold"></i>
                        {% elseif key == 'market_cap' %}
                        <i class="bi bi-bank2 align-self-center mx-auto fs-5 fw-bold"></i>
                        {% elseif key == 'volume_24h' %}
                        <i class="bi bi-currency-exchange align-self-center mx-auto fs-5 fw-bold"></i>
                        {% elseif key == 'circulating_supply' %}
                        <i class="bi bi-bar-chart align-self-center mx-auto fs-5 fw-bold"></i>
                        {% elseif key == 'market_cap_dominance' %}
                        <i class="bi bi-pie-chart align-self-center mx-auto fs-5 fw-bold"></i>
                        {% endif %}
                    </div>
                </div>
                <div class="flex-grow-1 ms-2 d-flex flex-column lh-1 small">
                    <b class="mb-1" data-stat="{{ key }}">
                        {% if key == 'rank' %}
                        {{ stat.value }}
                        {% elseif key == 'circulating_supply' %}
                        XLM {{ stat.value | format_large_number }}
                        {% elseif key == 'market_cap_dominance' %}
                        {{ stat.value }}%
                        {% elseif key == 'price_usd' %}
                        ${{ stat.value }}
                        {% else %}
                        ${{ stat.value|format_large_number }}
                        {% endif %}
                    </b>
                    <div class="small text-secondary">
                        <span class="small mb-0">
                            {% if key == 'rank' %}
                            Rank
                            {% elseif key == 'price_usd' %}
                            Price
                            {% elseif key == 'market_cap' %}
                            Market Cap.
                            {% elseif key == 'volume_24h' %}
                            24h DEX Volume
                            {% elseif key == 'circulating_supply' %}
                            Circulating Supply
                            {% elseif key == 'market_cap_dominance' %}
                            Market Cap Dominance
                            {% endif %}
                        </span>
                    </div>
                </div>

                <div class="flex-shrink-0 d-flex small">
                    {% set change = (stat.value is not null and stat.prev_value is not null) ? (stat.value -
                    stat.prev_value) :
                    0 %}
                    {% set percentageChange = (stat.prev_value is not null and stat.prev_value != 0) ? ((change /
                    stat.prev_value) * 100)|number_format(2) : 0 %}

                    {% if key == 'rank' %}
                    {% set caretDirection = change < 0 ? 'up' : 'down' %} {% set color=change < 0 ? 'success' : 'danger' %}
                        {% set displayChange=percentageChange|replace({'-': '' }) %} {% else %} {% set caretDirection=change
                        < 0 ? 'down' : 'up' %} {% set color=change < 0 ? 'danger' : 'success' %} {% set
                        displayChange=percentageChange %} {% endif %} <span
                        class="badge bg-opacity-25 align-self-center text-{{ color }} bg-{{ color }}">
                        <i class="bi bi-caret-{{ caretDirection }}-fill"></i>
                        {{ displayChange }}%
                        </span>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

