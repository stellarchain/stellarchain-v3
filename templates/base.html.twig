<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %} - StellarChain Community</title>
    <meta name="viewport"
        content="width = device-width, height=device-height, initial-scale = 1.0, minimum-scale = 1, maximum-scale = 1, user-scalable = no, shrink-to-fit = no">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#000000" media="(prefers-color-scheme: light)">
    <meta name="theme-color" content="#000000" media="(prefers-color-scheme: dark)">
    <meta name="msapplication-TileColor" content="#000000">
    <meta name="msapplication-config" content="/assets-custom/favicon/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    {% block stylesheets %}
    <link rel="apple-touch-icon" sizes="180x180" href="/assets-custom/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets-custom/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets-custom/favicon/favicon-16x16.png">
    <link rel="manifest" href="/assets-custom/favicon/site.webmanifest">
    <link rel="mask-icon" href="/assets-custom/favicon/safari-pinned-tab.svg" color="#000000">
    <link rel="shortcut icon" href="/assets-custom/favicon/favicon.ico">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/assets-custom/css/flag-icons.min.css">
    {% endblock %}
    {% block javascripts %}
    {% endblock %}
    {% block importmap %}
        {{ importmap('app') }}
    {% endblock %}
</head>

<body class="vh-100">
    <div class="d-flex flex-column flex-lg-row overflow-hidden h-100">
        {% block sidebar %}
        {{ include('sidebar.html.twig') }}
        {% endblock %}
        <div class="container">
            {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
            <div class="toast-container position-fixed top-0 end-0 p-3">
                    <div id="liveToastAuth" class="toast bg-{{ type }} show" role="alert" aria-live="assertive"
                        data-bs-autohide="true"
                    aria-atomic="true">
                    <div class="toast-header">
                        <strong class="me-auto">Message</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        {{ message }}
                    </div>
                </div>
            </div>
            {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
    </div>
    <div class="container d-block d-lg-none">
        <nav class="navbar navbar-expand fixed-top menu">
            <div class="d-flex align-items-center hover rounded-1 p-2">
                <div class="bg-primary bg-opacity-10 d-flex rounded" style="height: 48px; width: 48px;">
                    <i class="bi bi-search align-self-center fs-4 text-primary rounded-circle mx-auto"></i>
                </div>
                <div class="flex-grow-1 align-items-center small ms-2">
                    <b class="h5 text-primary fw-bold">StellarChain</b>
                    <p class="small text-muted text-uppercase fw-bold mb-0 text-nowrap">Blockchain Explorer</p>
                </div>
            </div>

            <div class="container-fluid d-flex justify-content-end">
                <a class="nav-link py-0 d-flex flex-column text-center lh-1 {% if app.request.get('_route') == 'app_account' %} text-primary {% else %} text-secondary {% endif %} me-2"
                    href="{{path('app_account')}}">
                    <i class="bi bi-person-circle fs-1"></i>
                </a>
            </div>
        </nav>
    </div>

    <div class="container d-block d-lg-none">
        <nav class="navbar navbar-expand fixed-bottom pb-2 pt-2 menu">
            <div class="container-fluid d-flex justify-content-around pb-2 mb-1">
                <a class="nav-link py-0 d-flex flex-column text-center lh-1
                        {% if app.request.get('_route') == 'app_home' %} text-primary {% else %} text-secondary {% endif %}  me-2"
                    href="{{path('app_home')}}">
                    <i class="bi bi-collection fs-4 mb-2"></i>
                    <span style="font-size:12px;">Today</span>
                </a>
                <a class="nav-link py-0 d-flex flex-column text-center lh-1
                        {% if app.request.get('_route') == 'app_discover' %} text-primary {% else %} text-secondary {% endif %} me-2"
                    href="{{path('app_discover')}}">
                    <i class="bi bi-compass fs-4 mb-2"></i>
                    <span style="font-size:12px;">Discover</span>
                </a>
                <a class="nav-link py-0 d-flex flex-column text-center lh-1 text-secondary me-2"
                    href="http://stellarchain.io">
                    <i class="bi bi-search fs-4 mb-2"></i>
                    <span style="font-size:12px;">Explorer</span>
                </a>
                <a class="nav-link py-0 d-flex flex-column text-center lh-1 {% if app.request.get('_route') == 'app_markets' %} text-primary {% else %} text-secondary {% endif %} me-2"
                    href="{{path('app_markets')}}">
                    <i class="bi bi-graph-up-arrow fs-4 mb-2"></i>
                    <span style="font-size:12px;">Markets</span>
                </a>
                <a data-bs-target="#filtersModal" data-bs-toggle="modal" class="nav-link py-0 d-flex flex-column text-center lh-1 {% if app.request.get('_route') == 'app_account' %} text-primary {% else %} text-secondary {% endif %} me-2"
                    >
                    <i class="bi bi-grid fs-4 mb-2"></i>
                    <span style="font-size:12px;">More</span>
                </a>
            </div>
        </nav>
    </div>
    <!-- MODAL - Filters -->
    <div class="modal modal-sm fade" id="filtersModal" tabindex="-1" aria-labelledby="filtersModal" id="filters" tabindex="-1" aria-labelledby="filters" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen-sm-down layout-bottom-sheet modal-dialog-centered">
            <div class="modal-content modal-bottom-sheet rounded-bottom-sheet h-auto h-sm-100 mt-auto mt-sm-0">
                <div class="modal-header border-bottom-0">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Filters</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-column py-0">

                    <!-- Row - Created At -->
                    <div class="mb-3">
                        <!-- Label -->
                        <label for="exampleFormControlTextarea1" class="form-label">Created At</label>
                        <!-- Selector -->
                        <div class="dropdown ms-auto w-100">
                            <div class="form-select w-100" data-bs-toggle="dropdown" aria-expanded="false">Created At</div>
                            <ul class="dropdown-menu px-2 w-100" style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate3d(0px, 40px, 0px);" data-popper-placement="bottom-start">
                                <!-- List -->
                                <div class="hover rounded-1 p-1">
                                    <option class="form-check-label" for="flexCheckChecked">Limited</option>
                                </div>
                                <!-- List -->
                                <div class="hover rounded-1 p-1">
                                    <option class="form-check-label" for="flexCheckChecked" checked>Member</option>
                                </div>
                                <!-- List -->
                                <div class="hover rounded-1 p-1">
                                    <option class="form-check-label" for="flexCheckChecked">Owner</option>
                                </div>
                            </ul>
                        </div>
                    </div>

                </div>
                <div class="modal-footer d-flex flex-row justify-content-center border-top-0">
                    <div type="button" class="btn btn-primary text-center w-100">Apply Filters</div>
                    <div type="button" class="btn btn-outline-primary text-center w-100">Reset Filters</div>
                </div>
            </div>
        </div>
    </div>
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="liveToastAuth" class="toast bg-secondary" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Access Denied</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                You access is denied.
            </div>
        </div>
    </div>
   </body>
</html>
