<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <title>{% block title %}StellarChain{% endblock %}</title>
    <meta name="viewport"
        content="width = device-width, height=device-height, initial-scale = 1.0, minimum-scale = 1, maximum-scale = 1, user-scalable = no, shrink-to-fit = no">

    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#000000" media="(prefers-color-scheme: light)">
    <meta name="theme-color" content="#000000" media="(prefers-color-scheme: dark)">
    <meta name="msapplication-TileColor" content="#000000">
    <meta name="msapplication-config" content="assets-custom/favicon/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    {% block stylesheets %}
        <link rel="apple-touch-icon" sizes="180x180" href="assets-custom/favicon/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="assets-custom/favicon/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="assets-custom/favicon/favicon-16x16.png">
        <link rel="manifest" href="assets-custom/favicon/site.webmanifest">
        <link rel="mask-icon" href="assets-custom/favicon/safari-pinned-tab.svg" color="#000000">
        <link rel="shortcut icon" href="assets-custom/favicon/favicon.ico">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link rel="stylesheet" href="/assets-custom/css/changes.css">
        <link rel="stylesheet" href="/assets-custom/css/flag-icons.min.css">
    {% endblock %}
    {% block javascripts %}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    {% endblock %}
</head>

<body class="vh-100">
    <div class="d-flex flex-column flex-lg-row overflow-hidden h-100" {{ stimulus_controller('symfony/ux-swup/swup', { containers: ['#swup', '#nav' ] }) }}>
       {% if is_granted('IS_AUTHENTICATED_FULLY') %}
         {{ include('sidebar.html.twig') }}
       {% endif %}
       <div class="container col-12 col-sm-9" id="swup">
          {% block body %}{% endblock %}
       </div>
    </div>

    <div class="container d-block d-lg-none">
        <nav class="navbar navbar-expand fixed-bottom pb-4 pt-2 menu bg-dark bg-gradient">
            <div class="container-fluid d-flex justify-content-around pb-2 mb-1">
                <a class="nav-link py-0 d-flex flex-column text-center lh-1 <?=(in_array($page_id, ['today'])?'text-primary':'text-secondary')?> me-2"
                    href="/">
                    <i class="bi bi-collection fs-4 mb-2"></i>
                    <span style="font-size:12px;">Today</span>
                </a>
                <a class="nav-link py-0 d-flex flex-column text-center lh-1 <?=(in_array($page_id, ['discover'])?'text-primary':'text-secondary')?> me-2"
                    href="/discover">
                    <i class="bi bi-compass fs-4 mb-2"></i>
                    <span style="font-size:12px;">Discover</span>
                </a>
                <a class="nav-link py-0 d-flex flex-column text-center lh-1 <?=(in_array($page_id, ['explorer'])?'text-primary':'text-secondary')?> me-2"
                    href="/explorer">
                    <i class="bi bi-search fs-4 mb-2"></i>
                    <span style="font-size:12px;">Explorer</span>
                </a>
                <a class="nav-link py-0 d-flex flex-column text-center lh-1 <?=(in_array($page_id, ['markets'])?'text-primary':'text-secondary')?> me-2"
                    href="/markets">
                    <i class="bi bi-graph-up-arrow fs-4 mb-2"></i>
                    <span style="font-size:12px;">Markets</span>
                </a>
                <a class="nav-link py-0 d-flex flex-column text-center lh-1 <?=(in_array($page_id, ['account'])?'text-primary':'text-secondary')?> me-2"
                    href="/account">
                    <i class="bi bi-person-circle fs-4 mb-2"></i>
                    <span style="font-size:12px;">Account</span>
                </a>
            </div>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    {% block scripts %}
        <!-- Default script content -->
    {% endblock %}
</body>

</html>
